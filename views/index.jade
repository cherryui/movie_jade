extends ./pages/layout

block content
	.container
			.row
				-for(var i=0;i<movies.length;i++)
					div(class='col-md-3')
						div(class='thumbnail')
							img(src='#{movies[i].poster}')
						div(class='caption')
							h3 #{movies[i].title}
							p
								a(class='btn btn-primary' href='/detail/#{movies[i]._id}') 观看影片

