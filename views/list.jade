extends ./pages/layout

block content
	.container
		.row
			table.table.table-hover.table-border
					thead
						th 电影名称
						th 导演
						th 国家
						th 上映年份
						th 查看
						th 更新
						th 删除
					tbody
						-for(var i=0;i<movies.length;i++)
							tr(class='item-id-1')
								td #{movies[i].title}
								td #{movies[i].director}
								td #{movies[i].country}
								td #{movies[i].year}
								td
									a(href='/detail/#{movies[i]._id}' target='_blank') 查看
								td
									button(class='btn btn-warning del') 修改
								td
									button(class='btn btn-danger del') 删除

